<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".register"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-107dp">


        <!--    <ImageView-->
        <!--        android:layout_width="144dp"-->
        <!--        android:layout_height="117dp"-->
        <!--        android:src="/Users/emanateya/AndroidStudioProjects/AssetsManagement1/app/src/main/res/mipmap-xxxhdpi/ic_launcher.png"-->
        <!--        tools:layout_editor_absoluteX="16dp"-->
        <!--        tools:layout_editor_absoluteY="16dp" />-->


        <TextView
            android:id="@+id/logoName"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="45dp"
            android:background="#FF5722"
            android:shadowColor="#9C27B0"
            android:text="Orassets"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FF5722"
            android:textColorHint="#FF5722"
            android:textColorLink="#FF5722"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toTopOf="@+id/FirstName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">


            <TextView
                android:id="@+id/FirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:text="First Name *"
                android:textColor="#000022"
                android:textColorHint="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/logoName"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="200dp" />

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="0dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:textSize="12dp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="180dp"
                tools:layout_editor_absoluteY="108dp"
                tools:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/MiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="0dp"
                android:text="Middle Name"
                android:textColor="#000022"
                android:textColorHint="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/FirstName"
                tools:layout_editor_absoluteX="18dp" />

            <EditText
                android:id="@+id/editMiddleName"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:hint="Middle Name"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/editFirstName"
                tools:layout_editor_absoluteX="180dp"
                tools:visibility="visible" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">
            <TextView
                android:id="@+id/LastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:text="Last Name *"
                android:textColor="#000022"
                android:textColorHint="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/MiddleName"
                tools:layout_editor_absoluteX="18dp" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:hint="Last Name"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/editMiddleName"
                tools:layout_editor_absoluteX="180dp"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">
            <TextView
                android:id="@+id/Department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:text="Department *"
                android:textColor="#000022"

                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/Username"
                tools:layout_editor_absoluteX="18dp" />

            <EditText
                android:id="@+id/editDepartment"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="45dp"
                android:inputType="textPersonName"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:hint="Department"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/editUsername"
                tools:layout_editor_absoluteX="180dp"
                tools:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:text="Username *"
                android:textColor="#000022"
                android:textColorHint="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/LastName"
                tools:layout_editor_absoluteX="18dp" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="45dp"
                android:inputType="textPersonName"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:hint="Username"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/editLastName"
                tools:layout_editor_absoluteX="180dp"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">



            <TextView
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:text="Password *"
                android:textColor="#000022"
                android:textColorHint="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/Department"
                tools:layout_editor_absoluteX="20dp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:inputType="textPassword"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:hint="Password"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/editDepartment"
                tools:layout_editor_absoluteX="180dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/showHideBtn"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:text="Show"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".register"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/ConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:text="Confirm Password *"
                android:textColor="#000022"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/Password"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/editConfirmPassword"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:inputType="textPersonName"
                android:shadowColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:hint="Re-enter Password"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/ConfirmPassword"
                app:layout_constraintTop_toBottomOf="@+id/editPassword"
                tools:visibility="visible" />

        </LinearLayout>


        <Button
            android:id="@+id/Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@android:color/black"
            android:text="create"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="575dp" />

        <TextView
            android:id="@+id/Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:textColor="#000022"
            android:textColorHint="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="350dp"
            tools:layout_editor_absoluteY="00dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>